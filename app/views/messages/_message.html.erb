<div class="chat_part">
    <div class="chat_part_information">
      <div class="chat_part_name"><%= message.user.name %></div>
      <div class="chat_part_date"> <%= l message.created_at %></div>
    </div>
    <div class="text_part">
      <div class="chat_part_text"><%= message.content %></div>
       <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image'if message.image.attached? %>
    </div>
  </div>