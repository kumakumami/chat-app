<div class = "room_title" >
<div class="left-header">
<div class=chat_title>hogehuga</div>
</div>

<div class="right-header">
<div class="exit_chat"> <a href="#">チャットを終了する</a></div>
</div>

</div>

<div class="chat">
  <div class="chat_part">
    <div class="chat_part_information">
      <div class="chat_part_name">Tom</div>
      <div class="chat_part_date">2020/3/31（wed） 12:43:30</div>
    </div>
    <div class="text_part">
      <div class="chat_part_text">おはよう</div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>

